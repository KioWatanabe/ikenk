<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
      <div id="logbox">
        <form id="signup" method="post" action="/signup">
          <h1>ログインする</h1>
          <!--<input name="user[email]" type="email" placeholder="enter your email" class="input pass"/>-->          
          <%= f.email_field :email, autofocus: true, required: true, :placeholder => "enter your email", :class => "input pass" %>
          <!-- <input name="user[password]" type="password" placeholder="enter your password" required="required" class="input pass"/> -->
          <%= f.password_field :password, autocomplete: "off", required: true, :class => "input pass",:placeholder => "enter your password" %>
         <!--  <input type="submit" value="Sign me in!" class="inputButton"/> -->
          <%= f.submit "ログイン", :class => "inputButton"%>
          <p class="text-center text-muted">
            or
          </p>
          <%= link_to 'Twitterでログイン', '/omniauth_callbacks', :class => "inputButton" %>
          <div class="text-center"">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "パスワードを忘れたら？", new_password_path(resource_name) %><br />
            <% end -%>
            -
            <%= link_to '新規登録', '/users/sign_up' %>
          </div>
        </form>
      </div>
    </div>
  </div>

<% end %>

