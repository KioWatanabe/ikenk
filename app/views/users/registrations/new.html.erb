

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
        <div id="logbox">
          <form id="signup" method="post" action="/signup">
            <h1>アカウント作成</h1>
            <%= f.text_field :username, autofocus: true, :placeholder => "ユーザー名を入力してください", :class => "input pass" %>
            <%= f.file_field :avatar_url,  :class => "input pass" %>
            <%= f.email_field :email, autofocus: true, required: true, :placeholder => "メールアドレスを入力してください", :class => "input pass" %>
            <%= f.password_field :password, autocomplete: "off", required: true, :placeholder => "パスワードを入力してください (6文字以上)", :class => "input pass" %></%>
             <%= f.password_field :password_confirmation, autocomplete: "off", required: true, :placeholder => "パスワードをもう一度入力してください", :class => "input pass" %>
            <%= f.submit "新規作成する", :class => "inputButton" %>
            <div class="text-center">
                 すでにアカウントを持っている方は？ <%= link_to 'ログイン', '/users/sign_in' %>
            </div>
          </form>
        </div>
      </div>
    </div>
<% end %>


