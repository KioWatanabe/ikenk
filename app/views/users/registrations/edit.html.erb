

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
      <div id="logbox">
        <form id="signup">
          <h1>アカウント情報の変更</h1>
          <%= f.text_field :username, autofocus: true,  :placeholder => "ユーザー名を入力してください", :class => "input pass" %>
          <%= f.file_field :avatar_url, :class => "input pass" %>
          <%= f.email_field :email, autofocus: true, :placeholder => "メールアドレスを入力してください", :class => "input pass" %>
           <%= f.password_field :password, autocomplete: "off", :class => "input pass", :placeholder => "新しいパスワード(6文字以上)" %>
           <%= f.password_field :password_confirmation, autocomplete: "off", :class => "input pass", :placeholder => "パスワードをもう一度入力" %>
           <%= f.password_field :current_password, autocomplete: "off", :class => "input pass", :placeholder => "現在のパスワードを入力" %>

          <div class="actions">
            <%= f.submit "情報を更新する", :class => "inputButton" %>
          </div>

        </form>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
      <div id="logbox">
        <form id="signup">
          <h1>アカウント消去</h1>
          <p style="text-align:center; padding-top:10px;">本当に消去しますか？? </p>
          <%= button_to "アカウントを消去する", registration_path(resource_name), data: { confirm: "本当に消去しますか？?" }, method: :delete,
          :class => "inputButton" %>
        </form>
      </div>
    </div>
  </div>


<% end %>


